{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "jsx": "react",
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["./src", "index.d.ts"],
  "exclude": ["node_modules", "./src/App.tsx", "./src/index.tsx"]
}
